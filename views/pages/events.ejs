<div class="jumbotron text-center">
    <h1>All confessions</h1>
</div>

<% if (success.length > 0) { %>
    <div class="alert alert-success"><%= success %></div>
<% } %>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>confessions Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% for (var confession of confessions) { %>
            <tr>
            <td><%= confessions.confession %></td>
            <td><a href="/confessions/<%= confessions.slug %>" class="btn btn-small btn-primary">view</a>
                <a href="/confessions/<%= confessions.slug %>/edit" class="btn btn-small btn-primary">edit</a>
                <a href="/confessions/<%= confessions.slug %>/delete" class="btn btn-small btn-danger">delete</a>
            </td>
        </tr>
        <% } %>

    </tbody>
</table>